@model List<Post>

@section Style{
    <style>
        .pxo {
            line-height: 1.2em;
            height: 3.6em;
            overflow: hidden;
        }
    </style>
}

<h1 class="text-center pt-3">
    My Profile
</h1>

<div class="container">
    <div class="row">
        <div class="col-12">
            <a asp-action="NewPost" class="btn btn-dark mb-3">Create Post</a>

            <div class="border py-3">
                <h3 class="ps-3">Name : - @ViewBag.User.FirstName</h3>
                <h4 class="ps-3">Name : - @ViewBag.User.Email</h4>
            </div>

            <h3 class="text-center py-4">MY POST</h3>
        </div>

        @foreach (var obj in Model)
        {
            <div class="col-7 mx-auto border mb-3">
                <div class="row">
                    <div class="col-4 p-2" style="height: 200px">
                        <img style="height: 100%; width: 100%" src="@obj.Url" />
                    </div>
                    <div class="col-7 p-2" style="height: 200px; position: relative">
                        <p class="pb-2">
                            <span class="fw-bold h3">@obj.Title</span>
                        </p>
                        <p class="pb-2 pxo">
                            @obj.Description
                        </p>
                        <div style="position: absolute; bottom: 0" class="p-2">
                            <a href="" class="pe-3">Like</a>
                            <a href="">Comment</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
